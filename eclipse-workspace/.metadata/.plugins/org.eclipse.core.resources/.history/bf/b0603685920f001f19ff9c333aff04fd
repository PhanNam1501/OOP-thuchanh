package Selenium;
import com.mongodb.*;

public class MongoDb {
    public static void main(String[] args) {
    	try {
    		MongoClient mongo1 = new MongoClient("localhost", 27017);
    		System.out.println("1");
    		DB db1 = mongo1.getDB("wecommit");
    		DBCollection coll = db1.createCollection("Student", null);
    		
    		BasicDBObject d1 = new BasicDBObject("Name", "Monika").append("RollNo", "1");
    		BasicDBObject d2 = new BasicDBObject("Name", "Rithvik").append("RollNo", "2");
    		coll.insert(d1);
    		coll.insert(d2);
    		
    	}
    	catch(Exception e) {
    		e.printStackTrace();
    	}
    		
    }

}
